{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "logAnalyticsRegion": {
            "defaultValue": "",
            "type": "String"
        },
        "logAnalyticsWorkspaceName": {
            "defaultValue": "",
            "type": "String"
        },
        "automationAccountName": {
            "defaultValue": "",
            "type": "String"
        }        
    },
    "variables": {
        "accountResourceId": "[resourceId('Microsoft.Automation/automationAccounts/',parameters('automationAccountName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.OperationalInsights/workspaces/linkedServices",
            "name": "[concat(parameters('logAnalyticsWorkspaceName'), '/' , 'Automation')]",
            "apiVersion": "2015-11-01-preview",
            "location": "[parameters('logAnalyticsRegion')]",
            "properties": {
                "resourceId": "[variables('accountResourceId')]"
            },
            "dependsOn": []
        }
    ]
}